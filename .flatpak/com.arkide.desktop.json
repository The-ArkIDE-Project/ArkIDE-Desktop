{
  "app-id": "com.arkide.desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "23.08",
  "command": "arkide",
  "separate-locales": false,
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "arkide",
      "buildsystem": "simple",
      "build-commands": [
        "npm ci",
        "npm run build",
        "mkdir -p /app/bin /app/share/arkide",
        "cp -r dist/* /app/share/arkide/",
        "install -Dm755 /dev/stdin /app/bin/arkide < <(cat <<'EOF'\n#!/bin/bash\nexec /app/share/arkide/ArkIDE-Desktop /usr/bin/electron \"$@\"\nEOF\n)"
      ],
      "build-options": {
        "env": {
          "npm_config_nodedir": "/usr/lib/sdk/node18/usr"
        }
      },
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/arc360alt/ArkIDE-Desktop.git",
          "branch": "main"
        }
      ]
    },
    {
      "name": "arkide-desktop",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/applications /app/share/icons/hicolor/512x512/apps",
        "install -Dm644 com.arkide.desktop.desktop /app/share/applications/",
        "install -Dm644 com.arkide.desktop.png /app/share/icons/hicolor/512x512/apps/"
      ],
      "sources": [
        {
          "type": "inline",
          "filename": "com.arkide.desktop.desktop",
          "content": "[Desktop Entry]\nVersion=1.0\nType=Application\nName=ArkIDE\nComment=The completely offline desktop version of ArkIDE\nExec=arkide %U\nIcon=com.arkide.desktop\nCategories=Development;IDE;\nTerminal=false\nStartupNotify=true\n"
        },
        {
          "type": "file",
          "path": "assets/icons/icon.png",
          "dest-filename": "com.arkide.desktop.png"
        }
      ]
    }
  ]
}
