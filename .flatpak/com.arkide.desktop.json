{
  "app-id": "com.arkide.desktop",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "23.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "arkide",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "arkide",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/bin /app/share/arkide",
        "cp -r ./* /app/share/arkide/",
        "cat > /app/bin/arkide <<'EOF'\n#!/bin/bash\ncd /app/share/arkide\n/app/share/arkide/ArkIDE-Desktop \"$@\"\nEOF",
        "chmod +x /app/bin/arkide"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "build-input"
        }
      ]
    },
    {
      "name": "arkide-metadata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/applications /app/share/icons/hicolor/512x512/apps",
        "cat > /app/share/applications/com.arkide.desktop.desktop <<'EOF'\n[Desktop Entry]\nVersion=1.0\nType=Application\nName=ArkIDE\nComment=The completely offline desktop version of ArkIDE\nExec=arkide %U\nIcon=com.arkide.desktop\nCategories=Development;IDE;\nTerminal=false\nStartupNotify=true\nEOF",
        "cp /app/share/arkide/assets/icons/icon.png /app/share/icons/hicolor/512x512/apps/com.arkide.desktop.png || true"
      ],
      "sources": []
    }
  ]
}